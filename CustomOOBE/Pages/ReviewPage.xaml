<UserControl x:Class="CustomOOBE.Pages.ReviewPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    <Grid Margin="80,60">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="¿Qué te pareció?"
                       FontSize="48"
                       FontWeight="Light"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Tu opinión nos ayuda a mejorar"
                       FontSize="18"
                       Foreground="{DynamicResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Contenido -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600">
            <!-- Calificación con estrellas -->
            <TextBlock Text="Califica tu experiencia"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,40">
                <Button x:Name="Star1" Content="☆" Click="Star_Click" Tag="1" Style="{StaticResource StarButtonStyle}"/>
                <Button x:Name="Star2" Content="☆" Click="Star_Click" Tag="2" Style="{StaticResource StarButtonStyle}"/>
                <Button x:Name="Star3" Content="☆" Click="Star_Click" Tag="3" Style="{StaticResource StarButtonStyle}"/>
                <Button x:Name="Star4" Content="☆" Click="Star_Click" Tag="4" Style="{StaticResource StarButtonStyle}"/>
                <Button x:Name="Star5" Content="☆" Click="Star_Click" Tag="5" Style="{StaticResource StarButtonStyle}"/>
            </StackPanel>

            <!-- Comentario -->
            <TextBlock Text="Cuéntanos tu experiencia (opcional)"
                       FontSize="18"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,0,0,15"/>

            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15">
                <TextBox x:Name="CommentTextBox"
                         FontSize="16"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="150"
                         VerticalScrollBarVisibility="Auto"
                         CaretBrush="{DynamicResource AccentBrush}"/>
            </Border>

            <TextBlock x:Name="StatusText"
                       Text=""
                       FontSize="14"
                       Foreground="Green"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Botones de navegación -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Saltar"
                    Click="Skip_Click"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button x:Name="SubmitButton"
                    Content="Enviar reseña"
                    Click="Submit_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</UserControl>
