<UserControl x:Class="CustomOOBE.Pages.UserSetupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    <Grid Margin="80,60">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="¿Quién usará esta computadora?"
                   FontSize="48"
                   FontWeight="Light"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,40"/>

        <!-- Contenido -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" MaxWidth="600">
            <!-- Avatar Selection -->
            <Border Width="150" Height="150"
                    CornerRadius="75"
                    BorderBrush="{DynamicResource AccentBrush}"
                    BorderThickness="3"
                    Margin="0,0,0,30">
                <Border.Background>
                    <ImageBrush x:Name="AvatarImage" Stretch="UniformToFill">
                        <ImageBrush.ImageSource>
                            <BitmapImage UriSource="/Assets/Avatars/default.png"/>
                        </ImageBrush.ImageSource>
                    </ImageBrush>
                </Border.Background>
            </Border>

            <!-- Avatar Options -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Button Content="Elegir avatar"
                        Click="ChooseAvatar_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"/>
                <Button Content="Tomar foto"
                        Click="TakePhoto_Click"
                        Style="{StaticResource SecondaryButtonStyle}"/>
            </StackPanel>

            <!-- Username Input -->
            <TextBlock Text="Nombre de usuario"
                       FontSize="16"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,20,0,10"/>

            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15">
                <TextBox x:Name="UsernameTextBox"
                         FontSize="24"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         CaretBrush="{DynamicResource AccentBrush}"
                         TextChanged="UsernameTextBox_TextChanged"/>
            </Border>

            <TextBlock x:Name="ErrorText"
                       Text=""
                       FontSize="14"
                       Foreground="Red"
                       Margin="0,10,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Botones de navegación -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ContinueButton"
                    Content="Continuar"
                    Click="Continue_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Popup para seleccionar avatar -->
        <Popup x:Name="AvatarPopup"
               StaysOpen="False"
               PlacementTarget="{Binding ElementName=AvatarImage}"
               Placement="Center">
            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="20"
                    MaxWidth="500">
                <StackPanel>
                    <TextBlock Text="Selecciona un avatar"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <WrapPanel x:Name="AvatarPanel" Orientation="Horizontal"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
