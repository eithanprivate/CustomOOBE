<UserControl x:Class="CustomOOBE.Pages.PersonalizationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    <Grid Margin="80,60">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Personaliza tu experiencia"
                       FontSize="48"
                       FontWeight="Light"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Configura el aspecto de tu equipo"
                       FontSize="18"
                       Foreground="{DynamicResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Contenido -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,30,0,0">
            <StackPanel>
                <!-- Selección de tema -->
                <TextBlock Text="Tema"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <Border x:Name="LightThemeOption"
                            Width="200"
                            Height="140"
                            CornerRadius="12"
                            BorderThickness="3"
                            Margin="0,0,20,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="LightTheme_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFFFFF" Offset="0"/>
                                <GradientStop Color="#F5F5F5" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock Text="Claro"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#000000"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="LightSelectedMark"
                                       Text="✓"
                                       FontSize="36"
                                       Foreground="#0078D4"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Margin="0,10,10,0"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <Border x:Name="DarkThemeOption"
                            Width="200"
                            Height="140"
                            CornerRadius="12"
                            BorderThickness="3"
                            Cursor="Hand"
                            MouseLeftButtonDown="DarkTheme_Click">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#1E1E1E" Offset="0"/>
                                <GradientStop Color="#2D2D2D" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock Text="Oscuro"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#FFFFFF"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="DarkSelectedMark"
                                       Text="✓"
                                       FontSize="36"
                                       Foreground="#0078D4"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Margin="0,10,10,0"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Selección de fondo de pantalla -->
                <TextBlock Text="Fondo de pantalla"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,20,0,20"/>

                <WrapPanel x:Name="WallpaperPanel" Margin="0,0,0,40"/>

                <!-- Selección de fondo de bloqueo -->
                <TextBlock Text="Pantalla de bloqueo"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,20,0,20"/>

                <WrapPanel x:Name="LockScreenPanel"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones de navegación -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Continuar"
                    Click="Continue_Click"
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
