<UserControl x:Class="CustomOOBE.Pages.NetworkSetupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    <Grid Margin="80,60">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÃ­tulo -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Configurar Internet"
                       FontSize="48"
                       FontWeight="Light"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,10"/>

            <TextBlock x:Name="ConnectionStatusText"
                       Text="No conectado"
                       FontSize="18"
                       Foreground="{DynamicResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Lista de redes -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,30,0,0">
            <StackPanel>
                <TextBlock Text="Redes disponibles"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,20"/>

                <!-- DetecciÃ³n de Ethernet -->
                <Border x:Name="EthernetPanel"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,10"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ConexiÃ³n por cable (Ethernet)"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="Conectado"
                                       FontSize="14"
                                       Foreground="Green"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1"
                                   Text="âœ“"
                                   FontSize="32"
                                   Foreground="Green"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Lista de redes WiFi -->
                <ItemsControl x:Name="NetworksList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,0,10"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="Network_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icono WiFi -->
                                    <TextBlock Grid.Column="0"
                                               Text="ðŸ“¶"
                                               FontSize="24"
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"/>

                                    <!-- Info de red -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Security}"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <!-- SeÃ±al -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding SignalStrength}"
                                               FontSize="16"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- BotÃ³n para refrescar -->
                <Button Content="ðŸ”„ Actualizar lista"
                        Click="RefreshNetworks_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Left"
                        Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones de navegaciÃ³n -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Saltar"
                    Click="Skip_Click"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button x:Name="ContinueButton"
                    Content="Continuar"
                    Click="Continue_Click"
                    Style="{StaticResource PrimaryButtonStyle}"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- Popup para contraseÃ±a WiFi -->
        <Popup x:Name="PasswordPopup"
               StaysOpen="False"
               Placement="Center">
            <Border Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="30"
                    MinWidth="400">
                <StackPanel>
                    <TextBlock x:Name="NetworkNameText"
                               Text="Nombre de Red"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="ContraseÃ±a"
                               FontSize="16"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,10"/>

                    <PasswordBox x:Name="PasswordBox"
                                 FontSize="18"
                                 Padding="10"
                                 Margin="0,0,0,20"/>

                    <CheckBox x:Name="ShowPasswordCheck"
                              Content="Mostrar contraseÃ±a"
                              Foreground="{DynamicResource TextSecondaryBrush}"
                              Margin="0,0,0,20"
                              Checked="ShowPassword_Changed"
                              Unchecked="ShowPassword_Changed"/>

                    <TextBlock x:Name="ConnectionErrorText"
                               Text=""
                               FontSize="14"
                               Foreground="Red"
                               Margin="0,0,0,10"
                               Visibility="Collapsed"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancelar"
                                Click="CancelPassword_Click"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Conectar"
                                Click="ConnectWiFi_Click"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
