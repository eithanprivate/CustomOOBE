<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colores Tema Oscuro -->
    <Color x:Key="DarkPrimaryBackground">#1E1E1E</Color>
    <Color x:Key="DarkSecondaryBackground">#2D2D2D</Color>
    <Color x:Key="DarkAccent">#0078D4</Color>
    <Color x:Key="DarkTextPrimary">#FFFFFF</Color>
    <Color x:Key="DarkTextSecondary">#B0B0B0</Color>
    <Color x:Key="DarkBorder">#3F3F3F</Color>

    <SolidColorBrush x:Key="DarkPrimaryBackgroundBrush" Color="{StaticResource DarkPrimaryBackground}"/>
    <SolidColorBrush x:Key="DarkSecondaryBackgroundBrush" Color="{StaticResource DarkSecondaryBackground}"/>
    <SolidColorBrush x:Key="DarkAccentBrush" Color="{StaticResource DarkAccent}"/>
    <SolidColorBrush x:Key="DarkTextPrimaryBrush" Color="{StaticResource DarkTextPrimary}"/>
    <SolidColorBrush x:Key="DarkTextSecondaryBrush" Color="{StaticResource DarkTextSecondary}"/>
    <SolidColorBrush x:Key="DarkBorderBrush" Color="{StaticResource DarkBorder}"/>

</ResourceDictionary>
